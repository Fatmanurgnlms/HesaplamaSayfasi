@page
@model HesaplamaSayfasi.Pages.HesapModel
@{
    ViewData["Title"] = "Calculater";
}


<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Not Hesaplama</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #ffffff; /* Beyaz arka plan */
        }

        .hesap-makinesi-container {
            background-color: #ffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border: 2px solid #3498db;
        }

        h1 {
            color: #3498db; /* Başlık rengi */
        }

        label {
            display: block;
            margin-bottom: 10px;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            box-sizing: border-box;
        }

        button {
            background-color: #3498db;
            color: #fff;
            padding: 15px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 18px;
            transition: background-color 0.3s ease;
            margin-right: 10px;
        }

        .sonuc {
            margin-top: 20px;
            font-weight: bold;
        }

        .git-buton {
            text-align: right;
            margin-top: 10px;
        }

            .git-buton a {
                background-color: #3498db;
                color: #fff;
                padding: 15px;
                border: none;
                border-radius: 8px;
                cursor: pointer;
                font-size: 18px;
                transition: background-color 0.3s ease;
                text-decoration: none;
            }

                .git-buton a:hover {
                    background-color: #3498db;
                }
    </style>
</head>

<body>

    <div class="hesap-makinesi-container">
        <h1>Not Hesaplama</h1>

        <form method="post">
            <label for="vize">Vize:</label>
            <input type="number" id="vize" name="Vize" asp-for="Vize">

            <label for="final">Final:</label>
            <input type="number" id="final" name="Final" asp-for="Final">

            <button type="submit">Hesapla</button>
        </form>

        @if (Model.ShowResult)
        {
            <div class="sonuc">
                <p>Ortalama: @Model.CalculateAverage()</p>
            </div>
        }

        <div class="git-buton">
            <a href="/Index">Login Sayfasına Git</a>
        </div>
    </div>

    <script src="script.js"></script>

</body>

</html>
